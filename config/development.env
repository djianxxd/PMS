# GoBlog 开发环境配置
APP_NAME=goblog
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# 数据库配置
DB_PATH=./data/app.db
DB_BACKUP_INTERVAL=1h
DB_MAX_CONNECTIONS=5

# 日志配置
LOG_LEVEL=debug
LOG_PATH=./logs/goblog.log
LOG_MAX_SIZE=50MB
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=7d

# HTTP服务配置
HTTP_READ_TIMEOUT=10s
HTTP_WRITE_TIMEOUT=10s
HTTP_IDLE_TIMEOUT=60s
HTTP_MAX_HEADER_BYTES=1048576

# 安全配置 (开发环境使用固定密钥)
SESSION_SECRET=dev-secret-key-change-in-production
CSRF_SECRET=dev-csrf-secret-change-in-production
ENABLE_HTTPS=false
CERT_FILE=
KEY_FILE=

# 备份配置
BACKUP_DIR=./data/backups
AUTO_BACKUP=false
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=false

# 性能配置
ENABLE_PPROF=true
PPROF_PORT=6060
GOMAXPROCS=4

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# 速率限制配置 (开发环境放宽限制)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1m

# 文件上传配置
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_TYPES=json,csv,txt

# 开发环境特定配置
DEV_RELOAD=true
DEV_LOG_SQL=true